<Window x:Class="AeroPlayer.Views.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AeroPlayer.Views.Dialogs"
        mc:Ignorable="d"  Loaded="Window_Loaded"
        Title="InputDialog" Width="400" Height="400"  >
    <StackPanel  VerticalAlignment="Center" Margin="2,2,2,2">
        <TextBlock FontSize="25" x:Name="MessageBlock"></TextBlock>
        <TextBox FontSize="20" x:Name="ResponseBox"></TextBox>
        <Button Content="Ok" Click="Button_Click"></Button>
    </StackPanel>
</Window>
