<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AeroPlayer.WPFControls">
    <DataTemplate x:Key="SongList" >

        <ListBox x:Name="List"   SelectedItem="{Binding Path=DataContext.Song,  ElementName=PlayListContentControl}"  ItemsSource="{Binding Songs}"  HorizontalContentAlignment="Stretch"  Grid.Column="0" >
            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="IsSelected" Value="True"></Setter>
                        </Trigger>
                    </Style.Triggers>
                    
                </Style>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <Button Command="{Binding Path=DataContext.LoadSong, ElementName=PlayListContentControl}">Load</Button>
                        <TextBlock TextAlignment="Center" FontSize="20" Foreground="Black"  Text="{Binding Path=SongDisplay}"></TextBlock>
                    </DockPanel>

                </DataTemplate>

            </ListBox.ItemTemplate>

        </ListBox>
    </DataTemplate>
</ResourceDictionary>